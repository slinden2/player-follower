  },
  "bugs": {
    "url": "https://github.com/slinden2/player-follower/issues"
  },
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start_local": "cross-env NODE_ENV=production node server.js",
    "watch": "cross-env NODE_ENV=development nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "client": "npm start --prefix ../frontend",
    "dev": "concurrently \"npm run watch\" \"npm run client\"",
    "lint": "eslint .",
    "fetch": "cross-env NODE_ENV=development node jobs/fetch-data.js",
    "server": "json-server -p3001 --watch db.json"
  },
