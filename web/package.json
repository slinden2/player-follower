  "license": "MIT",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "jest": "^24.8.0",
    "json-server": "^0.15.0",
    "nodemon": "^1.19.1"
  },
  "dependencies": {
    "apollo-server": "^2.6.3",
    "apollo-server-express": "^2.7.0-alpha.3",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "express": "^4.17.1",
    "graphql": "^14.3.1",
    "install": "^0.12.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.14",
